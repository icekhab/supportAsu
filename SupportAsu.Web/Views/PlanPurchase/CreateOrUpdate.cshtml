@model SupportAsu.Model.Purchase
@{
    //ViewBag.Title = "CreateOrUpdate";
    Layout = null;
}

<form id="putchases-form" class="putchases-form">
    @Html.HiddenFor(x => x.Id, new { id = "input_id" })
    <div class="input-field">
        <span class="input-lable">Назва</span>
        @Html.TextBoxFor(x => x.Name, new {@class = "sa-input", id = "input_name"})
        <span class="required-field">*</span>
        @Html.ValidationMessageFor(x => x.Name, null, new {@class = "help-error"})
    </div>
    <div class="input-field">
        <span class="input-lable">Дата</span>
        @Html.TextBoxFor(model => model.Date, Model.Date != DateTime.MinValue ? "{0:yyyy-MM-dd}" : "",
            new {@class = "sa-input", id = "input_date", type = "date"})
        <span class="required-field">*</span>
        @Html.ValidationMessageFor(x => x.Date, null, new {@class = "help-error"})
        <span class="help-error"></span>
    </div>
    <div class="input-field sa-textarea">
        <span class="input-lable">Примітка</span>
        @Html.TextAreaFor(x => x.Note, new {@class = "sa-input", id = "input_note"})
    </div>
    <button type="submit" class='btn--orange save-putchases'>Зберегти</button>
</form>

