@model SupportAsu.DTO.Dictionary.DicValueModel
@{
    Layout = null;
    string BtnName = Model.Id == 0 ? "Додати" : "Оновити";

}
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Ajax.BeginForm("AddEdit", "Dictionary",new AjaxOptions {OnBegin="OnBegin",OnSuccess = "OnSuccess" }, new { @id = "dicValueForm" }))
{
    @Html.ValidationSummary(true)
    <div class="form-horizontal">
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.DicId)
        <div>
            @Html.LabelFor(model => model.Code)
            @Html.TextBoxFor(model => model.Code, new { @class = "code_c" })
            @Html.ValidationMessageFor(model => model.Code)
        </div>
        <div>
            @Html.LabelFor(model => model.Value)
            @Html.TextBoxFor(model => model.Value)
            @Html.ValidationMessageFor(model => model.Value)
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="@BtnName" class="btn btn-default" onclick="Save()" />
                <input type="button" value="Закрити" class="btn btn-default" onclick="Close()" />
            </div>
        </div>
    </div>
}


<script src="~/Scripts/Custom/Dictionary/AddEdit.js"></script>
<script>
    var validUrl = '@Url.Action("ValidateDicValueCode", "Dictionary")';
    
</script>